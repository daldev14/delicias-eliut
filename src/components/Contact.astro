---
import Copy from "@/components/Copy.jsx";
import IconFacebook from "@/components/icons/Facebook.astro";
import IconWhatsApp from "@/components/icons/WhatsApp.astro";
---

<div class="w-full border overflow-hidden rounded-lg shadow-lg">
  <div class="grid grid-cols-1 md:grid-cols-2">
    <!-- QR code section -->
    <div class="flex flex-col items-center justify-center p-14 bg-gray-50">
      <h2 class="text-2xl font-bold mb-6 text-wrap">
        Escanear para chatear en WhatsApp
      </h2>
      <div class="bg-white p-3 size-48 rounded-lg shadow-lg relative">
        <img src="./qr.png" class="invert" alt="QR code whatsapp" />
      </div>
    </div>

    <!-- Contact info section -->
    <div class="flex flex-col justify-center p-14 bg-white">
      <h2 class="text-3xl font-bold mb-6">Contacte con nosotros</h2>
      <div class="flex items-center mb-6">
        <p class="text-lg mr-4">WhatsApp: +504 9776-1657</p>
        <Copy client:visible />
      </div>
      <div class="flex space-x-4 mb-8">
        <a
          href="https://www.facebook.com/DeliciasEliut"
          rel="noopener noreferrer"
          class="text-blue-600 hover:text-blue-800 transition-colors duration-200"
        >
          <IconFacebook />
        </a>
        <a
          href="https://wa.me/+50497761657?text=Hola Eliut, quisiera saber más información sobre sus servicios."
          rel="noopener noreferrer"
          class="text-emerald-600 hover:text-emerald-800 transition-colors duration-200"
        >
          <IconWhatsApp />
        </a>
      </div>
      <p class="text-sm text-gray-600 text-pretty">
        Ponte en contacto con nosotros por WhatsApp o a través de nuestras redes
        sociales.
      </p>
    </div>
  </div>
</div>
