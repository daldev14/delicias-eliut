---
import { REDES } from "@/consts";
import Copy from "@/components/Copy.jsx";
---

<div class="w-full border overflow-hidden rounded-lg shadow-lg">
  <div class="grid grid-cols-1 md:grid-cols-2">
    <!-- QR code section -->
    <div
      class="flex flex-col items-center justify-center p-6 lg:p-14 bg-gray-50"
    >
      <h2 class="text-2xl font-bold mb-6 text-wrap text-center md:text-left">
        Escanear para chatear en WhatsApp
      </h2>
      <div class="bg-white p-3 size-56 rounded-lg shadow-lg relative">
        <img src="./qr.png" class="invert w-full" alt="QR code whatsapp" />
      </div>
    </div>

    <!-- Contact info section -->
    <div class="flex flex-col justify-center p-6 lg:p-14 bg-white">
      <h2 class="text-3xl font-bold mb-6 text-wrap text-center md:text-left">
        ¿Quieres más información?
      </h2>
      <div class="flex items-center mb-6">
        <p class="text-lg mr-4 text-pretty">WhatsApp: +504 9776-1657</p>
        <Copy client:visible />
      </div>
      <div class="flex space-x-4 mb-8">
        <!-- Whatsapp -->

        {
          REDES.map((item) => {
            if (item?.isDisable) return false;
            const Icon = item?.icon;

            return (
              <a
                href="https://wa.me/+50497761657?text=Hola Eliut, quisiera saber más información sobre sus servicios."
                rel="noopener noreferrer"
                class="text-emerald-600 hover:text-emerald-800 transition-colors duration-200"
                title={item?.title}
              >
                <Icon />
              </a>
            );
          })
        }
      </div>
      <p class="text-sm text-gray-600 text-pretty">
        Ponte en contacto con nosotros por WhatsApp, Facebook o mediante correo
        electrónico.
      </p>
    </div>
  </div>
</div>
